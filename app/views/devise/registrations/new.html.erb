<div class="sing-up-wrapper">
  <div class="sing-up-navbar">
    <%= link_to root_path do  %>
    <h2>COTTON</h2>
    <h2>COMPLEMENTOS</h2>
    <% end %>
  </div>
  <div class="sing-up-container">
    <div class="text-center">
      <hr class="hr-text" data-content="Registrarse">
    </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="d-flex justify-content-between">
        <div class="mr-3">
          <p>Nombre</p>
          <%= f.input :name,
          required: true,
          autofocus: true,
          input_html: { autocomplete: "nombre", class: "form-control form-control" }, label: false %>
        </div>
        <div class="ml-3">
          <p>Apellido</p>
          <%= f.input :last_name,
          required: true,
          autofocus: true,
          input_html: { autocomplete: "apellido", class: "form-control form-control" }, label: false %>
        </div>
      </div>
      <p>Telefono</p>
      <%= f.input :phone,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "phone", class: "form-control form-control" }, label: false %>
      <div class="pb-5">
       <p>Email</p>
       <%= f.input :email,
       required: true,
       autofocus: true,
       input_html: { autocomplete: "email", class: "form-control form-control" }, label: false %>

     </div>
     <p>Contraseña</p>
     <%= f.input :password,
     required: true,
     label: false,
     hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
     input_html: { autocomplete: "new-password" } %>
     <p>Confirmar contraseña</p>
     <%= f.input :password_confirmation,
     required: true,
     label: false,
     input_html: { autocomplete: "new-password" } %>
   </div>

   <div class="form-actions mt-1">
    <%= f.button :submit, "Ingresar", class: 'btn btn-primary btn-block' %>
  </div>
  <% end %>
  <div class="text-center mt-3">
    <p>No tienes cuenta? <%= render "devise/shared/links" %></p>
  </div>
</div>
</div>
