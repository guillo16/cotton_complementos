<table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Fecha</th>
        <th scope="col">Precio</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.amount %></td>
        <td><%= link_to 'Ver Producto', product_path(product) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
