<div class="text-center">
  <% @divisions.each do |division| %>
  <%= link_to division.title, division_path(division)  %>
  <% end %>
</div>



<%= @category.division.title%>/ <%= @category.title %>
<div class=" justify-content-between">
  <div>
    <h1><%= @category.title %></h1>
    <% division_title =  @category.division.title %>
    <% category_links = @categories.filter { |category| category.division.title == division_title } %>
    <% category_links.each do |g| %>
    <%= link_to category_path(g) do  %>
    <h2><%= g.title %></h2>
    <% end %>
    <% end %>
  </div>
  <div class= "product-container">
    <% @category.products.each do |product| %>
    <%= render 'shared/product_card', product: product %>
    <% end %>
  </div>
</div>



<div class="mobile-button-container">
  <h2><%= @category.title %></h2>
  <div class="mobile-button">
    <div class="dropdown">
      <button class="categories-button" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Categorias <i class="fas fa-chevron-down"></i>
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <p class="dropdown-item" style="margin-bottom: 0px; font-size:13px; margin-top: 0px;text-decoration: underline; color: #26262c;"><%= @category.title %></p>
        <div class="dropdown-divider"></div>
        <% division_title =  @category.division.title %>
        <% category_links = @categories.filter { |category| category.division.title == division_title } %>
        <% category_links.each do |g| %>
        <%= link_to g.title, category_path(g), class: "dropdown-item"%>
        <div class="dropdown-divider"></div>
        <% end %>
      </div>
    </div>
    <div>
      <button class="filter-button">filtros</button>
    </div>
  </div>
  <p><%= @category.products.count %> productos</p>
</div>




