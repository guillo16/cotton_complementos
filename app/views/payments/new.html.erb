<div class="payment-wrapper" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1499916078039-922301b0eb9b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1100&q=80);">
  <div class="payment-container">
    <div class="text-center mb-5">
      <h2>COTTON</h2>
      <h2>COMPLEMENTOS</h2>
    </div>
    <% if @order.amount == 0 %>
    <div class="text-center mb-1">
      Tienes que tener un articulo para poder comprar
    </div>
    <%= link_to 'Ir al Carrito',cart_path(@cart), class: "btn btn-gradient btn-lg btn-block"  %>
    <% else %>
    <div class="payment-order">
      <p><strong>subtotal:</strong><%= humanized_money_with_symbol(@order.amount) %></p>
      <% unless @order.shipping == nil %>
      <p><strong>Envio:</strong><%= humanized_money_with_symbol(@order.shipping.amount) %></p>
      <% end %>
      <p><strong>Total:</strong><%= humanized_money_with_symbol(@order.total) %></p>
      <% if @order&.shipping&.valid? %>
      <form action="<%= order_payments_path(@order) %>" method="POST">
        <%= hidden_field_tag :authenticity_token %>
        <input type="hidden" name='order_id' value=<%= @order.id %>>
        <script
        src="https://www.mercadopago.com.ar/integrations/v1/web-payment-checkout.js"
        data-preference-id="<%= @preference_id %>">
      </script>
    </form>
    <% else %>
    <button class="btn-dark disabled">Llenar el formulario</button>
    <% end %>
    <% end %>
  </div>
</div>
</div>
<% unless @order&.shipping&.valid? %>
<%= render 'shippings/new' %>
<% else %>
<%= @order.shipping.address %>
<%= link_to 'editar', edit_shipping_path(@order.shipping.id) %>
<% end %>





<pre><%= JSON.pretty_generate(@preference["response"]) %> </pre>
