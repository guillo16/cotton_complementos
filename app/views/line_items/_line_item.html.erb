<div class="line-wrapper">
  <div class="line-quantity">
    <p>Quantity: <%= line_item.quantity %></p>

  </div>
  <div class="line-image">
    <img src="<%= line_item.product.photo %>" alt="car photo">
  </div>
  <div class="line-description">
    <h3><%= line_item.product.title %></h3>
    <%= link_to 'Quitar Articulo', line_item, method: :delete, data: { confirm: "Are you sure? " }, class: "button is-small mb4" %>
  </div>
  <div class="line-price">
    <%= number_to_currency(line_item.total_price) %>
  </div>
</div>
