<p><%= @division.title %>/Todos los articulos</p>
<div class="md-d-flex justify-content-between">
  <div class= 'category'>
    <% @division.categories.each do |category| %>
    <p><%= link_to category.title, category_path(category)  %></p>
    <% end %>
  </div>
  <div class="product-container">
    <% @division.categories.each do |category| %>
    <% category.products.each do |product| %>
    <%= render 'shared/product_card', product: product %>
    <% end %>
    <% end %>
  </div>
</div>

<div class="mobile-button-container">
  <h2><%= @division.title %></h2>
  <div class="mobile-button">
    <div class="dropdown">
      <button class="categories-button" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Categorias <i class="fas fa-chevron-down"></i>
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <p class="dropdown-item" style="margin-bottom: 0px; font-size:13px; margin-top: 0px;text-decoration: underline; color: #26262c;"><%= @division.title %></p>
        <div class="dropdown-divider"></div>
        <% @division.categories.each do |category| %>
        <p><%= link_to category.title, category_path(category), class: "dropdown-item"  %></p>
        <div class="dropdown-divider"></div>
        <% end %>
      </div>
    </div>
    <div>
      <button class="filter-button">filtros</button>
    </div>
  </div>
</div>
